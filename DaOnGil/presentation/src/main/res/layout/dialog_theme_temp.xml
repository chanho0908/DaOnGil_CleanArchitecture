<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_radius_10"
    android:backgroundTint="@color/card_background_color"
    android:gravity="center"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:padding="@dimen/margin_basic">

    <TextView
        android:id="@+id/dialog_theme_temp_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_semibold"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_big3"
        android:lineSpacingMultiplier="1.1"
        android:text="시스템 설정을 통해 \n테마를 변경해 보세요!"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/font_big1" />

    <TextView
        android:id="@+id/dialog_theme_temp_title2_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small2"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="center"
        android:text="시스템 설정에서 야간 모드로 설정 시 \n고대비 테마가 적용됩니다"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/font_small1" />

    <ImageView
        android:id="@+id/dialog_theme_temp_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:src="@drawable/image_theme_temp" />

    <Button
        android:id="@+id/dialog_theme_temp_positive_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_radius_5"
        android:fontFamily="@font/pretendard_semibold"
        android:text="확인"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/font_big3"
        app:backgroundTint="@color/primary" />

</LinearLayout>